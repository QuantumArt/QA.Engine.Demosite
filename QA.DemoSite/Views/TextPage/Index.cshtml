@model QA.DemoSite.Models.Pages.TextPage

@if (!Model.HideTitle)
{
  <div id="pageTitle" class="bg--overlay">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="section-title">
            <h2>@Model.Title</h2>
          </div>
        </div>

        @await Component.InvokeAsync("Breadcrumbs")
      </div>
    </div>
  </div>
}

@await Component.WidgetZone(Html, "Content")

@if (!String.IsNullOrWhiteSpace(Model.Text))
{
  <div class="guides-layout__content">
    <section class="guides">
      @await Component.RenderZonesInText(Html, Model.Text)
    </section>
  </div>
}

@await Component.WidgetZone(Html, "ContentBelow")
